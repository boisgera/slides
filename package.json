  "description": "",
  "dependencies": {
    "jss": "^10.10.0",
    "motion": "^12.4.10",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-jss": "^10.10.0",
    "react-markdown": "^10.1.0",
    "rehype-mathjax": "^7.1.0",
    "remark-math": "^6.0.0"
  },
  "devDependencies": {
    "@danielx/civet": "^0.9.7",
    "esbuild": "^0.25.0",
    "http-server": "^14.1.1"
  }
}
