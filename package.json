{
  "name": "slides",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf *.civet.tsx *.css",
    "build": "civet styles.civet > styles.css && civet -c *.civet && esbuild app.civet.tsx --bundle --format=esm --outfile=app.js",
    "watch": "watchexec -w app.civet -w styles.civet -w index.html -- npm run build",
    "serve": "http-server"
  },
